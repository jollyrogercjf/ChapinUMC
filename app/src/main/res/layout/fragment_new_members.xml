<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/steelBlue"
    android:orientation="vertical">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/welcomeintroclass"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newMembers"
        android:textAlignment="center"
        android:textColor="@color/greenBlue"
        android:layout_margin="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questions? Email Chris@chapinumc.com"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/greenBlue"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="emailChris"
        android:background="@color/steelBlue"
        android:backgroundTint="@color/steelBlue"
        />




</LinearLayout>
