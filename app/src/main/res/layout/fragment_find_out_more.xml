<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/steelBlue">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/chapinumclogo"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Find out more about who we are"
    android:textColor="@color/greenBlue"
    android:textAlignment="center"
    android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here"
        android:onClick="toWhoWeAre"
        android:clickable="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn more about our team"
        android:textColor="@color/greenBlue"
        android:textAlignment="center"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here"
        android:onClick="toOurTeam"
        android:clickable="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call 803.345.2801 for more information."
        android:textColor="@color/greenBlue"
        android:textAlignment="center"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here"
        android:clickable="true"
        android:onClick="callChurch"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/gpschapinumc"
        android:onClick="goToMaps"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp" />


</LinearLayout>
